		{
			"name": "GetBookingIds",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//Environment değişkeninden hedef ID'yi al\r",
							"var targetID = parseInt(pm.environment.get(\"bookingId\"));\r",
							"\r",
							"//Yanıtı JSON olarak ayrıştır\r",
							"var jsonData = pm.response.json();\r",
							"\r",
							"//ID'yi arayın\r",
							"var idFound = jsonData.some(function(booking){\r",
							"    return booking.bookingid == targetID;\r",
							"});\r",
							"\r",
							"//Test sonucunu bildir\r",
							"pm.test(\"Booking ID \" + targetID + \" is present is the list\", function(){\r",
							"        pm.expect(idFound).to.be.true;\r",
							"});\r",
							"\r",
							"pm.test(\"Status code is 200\", function(){\r",
							"    pm.response.to.have.status(200);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
